<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.6.2</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>com.butterfly</groupId>
    <artifactId>butterfly-dts</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>butterfly-dts</name>
    <description>butterfly-dts</description>
    <packaging>pom</packaging>

    <properties>
        <java.version>1.8</java.version>
        <guava.version>18.0</guava.version>
        <jodd-http.version>6.2.1</jodd-http.version>
        <fastjson.version>1.2.69</fastjson.version>
        <commons-lang3.version>3.5</commons-lang3.version>
        <hutool-all.version>5.7.22</hutool-all.version>

        <butterfly-dts-common.version>0.0.1-SNAPSHOT</butterfly-dts-common.version>
        <butterfly-dts-core.version>0.0.1-SNAPSHOT</butterfly-dts-core.version>
        <butterfly-dts-starter.version>0.0.1-SNAPSHOT</butterfly-dts-starter.version>
    </properties>

    <modules>
        <module>butterfly-dts-core</module>
        <module>butterfly-dts-common</module>
        <module>butterfly-dts-admin</module>
        <module>butterfly-dts-starter-demo</module>
        <module>butterfly-dts-starter</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${guava.version}</version>
                <scope>compile</scope>
            </dependency>

            <dependency>
                <groupId>org.jodd</groupId>
                <artifactId>jodd-http</artifactId>
                <version>${jodd-http.version}</version>
            </dependency>

            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>fastjson</artifactId>
                <version>${fastjson.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${commons-lang3.version}</version>
            </dependency>

            <dependency>
                <groupId>cn.hutool</groupId>
                <artifactId>hutool-all</artifactId>
                <version>${hutool-all.version}</version>
            </dependency>

            <!-- 系统版本配置 -->
            <dependency>
                <groupId>com.butterfly</groupId>
                <artifactId>butterfly-dts-common</artifactId>
                <version>${butterfly-dts-common.version}</version>
            </dependency>

            <dependency>
                <groupId>com.butterfly</groupId>
                <artifactId>butterfly-dts-core</artifactId>
                <version>${butterfly-dts-core.version}</version>
            </dependency>

            <dependency>
                <groupId>com.butterfly</groupId>
                <artifactId>butterfly-dts-starter</artifactId>
                <version>${butterfly-dts-starter.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>
    </dependencies>
</project>
